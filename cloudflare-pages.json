{
  "name": "porta-cabin-crm",
  "build": {
    "command": "npm run build:memory-optimized",
    "output": "build",
    "environment": {
      "NODE_VERSION": "18",
      "NPM_VERSION": "9",
      "NODE_OPTIONS": "--max-old-space-size=8192 --expose-gc",
      "GENERATE_SOURCEMAP": "false",
      "DISABLE_ESLINT_PLUGIN": "true",
      "TSC_COMPILE_ON_ERROR": "true",
      "FAST_REFRESH": "false",
      "INLINE_RUNTIME_CHUNK": "false"
    }
  },
  "routing": {
    "rules": [
      {
        "source": "/*",
        "destination": "/index.html",
        "status": 200
      }
    ]
  },
  "headers": [
    {
      "source": "/**/*",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/static/**/*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}